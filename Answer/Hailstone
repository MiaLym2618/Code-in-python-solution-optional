def main():

    num = int(input("Enter a number: "))
    while num != 1:
        remainder = num % 2
        if remainder == 1:
            new_num=num*3+1
            print(f"{num} is odd, so I make 3n + 1: {new_num}")
            
        else:
            new_num=int(num/2)
            print(f"{num} is even, so I take half: {new_num}")    

        num=new_num    
    


if __name__ == "__main__":
    main()
